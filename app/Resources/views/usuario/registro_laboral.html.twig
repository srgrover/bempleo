{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container ">
        <div class="card-registro col-lg-7">
            <h1>
                4. Laboral
            </h1>
            <div class="box-registro">
                {{ form_start(formulario) }}
                {{ form_widget(formulario) }}
                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <button type="submit" name="enviar" class="btn btn-success">
                            <i class="fa fa-plus"></i>
                            Guardar y Nuevo
                        </button>
                        <button type="submit" name="enviar" class="btn btn-info">
                            <i class="fa fa-arrow-right"></i>
                            Guardar y siguiente
                        </button>
                    </div>
                </div>
                {{ form_end(formulario) }}
            </div>
        </div>
    </div>
{% endblock %}