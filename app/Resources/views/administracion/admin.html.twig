{% extends 'layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/admin.css') }}">
{% endblock %}

{% block title %}Administrador | Bolsa de empleo{% endblock %}

{% block content %}
    <div class="container top-margin">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <h3 class="panel-title">Panel de usuarios</h3>
                            </div>
                            <div class="col col-xs-6 text-right">
                                <a href="{{ path('registro_personal') }}" class="btn btn-sm btn-success btn-create">
                                    <i class="fa fa-plus"></i>
                                    Nuevo usuario
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-list">
                            <thead>
                            <tr>
                                <th><i class="fa fa-cog"></i></th>
                                <th class="hidden-xs">Identidad</th>
                                <th>Nombre</th>
                                <th>Apellidos</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for usuario in usuarios %}
                            <tr>
                                <td align="center">
                                    <a href="{{ path('editar_usuario', {'id': usuario.id}) }}" class="btn btn-default">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <a href="{{ path('borrar_usuario', {'id': usuario.id}) }}" class="btn btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                                <td class="hidden-xs">
                                    <a href="{{ path('perfil_usuario', {'id' : usuario.id}) }}">
                                        {{ usuario.numIdenti }}
                                    </a>
                                </td>
                                <td>{{ usuario.nombre }}</td>
                                <td>{{ usuario.apellidos }}</td>
                            </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col col-xs-4">Page 1 of 5
                            </div>
                            <div class="col col-xs-8">
                                <ul class="pagination hidden-xs pull-right">
                                    <li><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                    <li><a href="#">5</a></li>
                                </ul>
                                <ul class="pagination visible-xs pull-right">
                                    <li><a href="#">«</a></li>
                                    <li><a href="#">»</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}