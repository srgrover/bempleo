{% extends 'layout.html.twig' %}

{% block content %}
    <div class="admin-panel card-principal">
        <h1>Listado de usuarios</h1>
        <a href="{{ path('registro_personal') }}" class="btn btn-success">
            <i class="fa fa-plus"></i>
            Añadir Usuario
        </a>
        <p></p>
        <table class="table table-bordered table-striped table-hover">
            <thead>
            <tr>
                <th class="col-sm-2">Número de Identificación</th>
                <th class="col-sm-2">Nombre</th>
                <th class="col-sm-2">Apellidos</th>
                <th class="col-sm-1"></th>
            </tr>
            </thead>
            <tbody>
            {% for usuario in usuarios %}
                <tr>
                    <td>{{ usuario.numIdenti }}</td>
                    <td>{{ usuario.nombre}}</td>
                    <td>{{ usuario.apellidos }}</td>
                    <td>
                        <a href="{{ path('editar_usuario', {'id': usuario.id}) }}" class="btn btn-xs btn-info col-sm-6" title="Modificar">
                            <i class="fa fa-pencil"></i>
                        </a>
                        <a href="{{ path('borrar_usuario', {'id': usuario.id}) }}" class="btn btn-xs btn-danger col-sm-6" title="Borrar">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}